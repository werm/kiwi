<% javascript 'snippet' %>
<div class="showcase kiwibox">
  <div class="ribbon">preview</div>
  <iframe id="preview" class="clearfix"></iframe>
</div>

<div class="kiwibox">
  <div class="ribbon">editing snippet: <%= @snippet.name %></div>
  <%= form_for(@snippet) do |f| %>
    <% if @snippet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h2>

        <ul>
        <% @snippet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-inline">
      <%= f.label :name %>
      <%= f.text_field :name, class: "kiwifocus", :placeholder => "Name" %>
      <%= f.label :category %>
      <%= f.text_field :category, :placeholder => "Category" %>
    </div>
    <div class="field html kiwibox">
      <%= f.label :html %><br />
      <%= f.text_area :html, class: "mono", id: "kiwi-html-source" %>
    </div>
    <div class="field css kiwibox">
      <%= f.label :css %><br />
      <%= f.text_area :css, class: "mono", id: "kiwi-scss-source" %>
    </div>
    <div class="field css kiwibox">
      <%= f.label :javascript %><br />
      <%= f.text_area :javascript, class: "mono", id: "kiwi-js-source" %>
    </div>
    <div class="actions">
      <%= f.submit nil, class: "steel kiwibutton" %>
    </div>
  <% end %>
</div>

