<div class="col-6-8">
<% @categories.each do |cat| %>
  <div class="grid">
    <div class="col-1">
      <h3><%= cat %></h3>
    </div>
  </div>
  <div class="grid">
    <% Snippet.where(category: cat).each do |snip| %>
      <%= link_to snip.name, snip, :class => "col-1-4" %>
      <iframe src="<%= snippets_path.to_s %>"></iframe>
    <% end %>
  </div>
  <% end %>
  <% if @snippet_count == 0 %>
    <p>nothing to see here yet. how's about you go create some snippets?</p>
  <% end %>
</div>